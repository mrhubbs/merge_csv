#:import hex_to_color kivy.utils.get_color_from_hex


<FocusTextInput@TextInput+FocusBehavior>:


<ColoredLabel>:
    background_color: (0, 0, 0, 0)
    text_size: self.size
    halign: 'center'
    valign: 'middle'

    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: root.pos
            size: root.size


<OutField>:
    src_name: self.src.name

    markup: True
    line_height: 1.2
    text: '[i][color=#808080]{}.{}[/color] ->[/i]\n    {}'.format(self.src.in_idx, self.src_name, self.name)


<AppRoot>:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .96, .96, .96
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: header
        orientation: 'horizontal'
        size_hint_y: None
        height: '35dp'

        ColoredLabel:
            id: in_label
            text: 'input' if len(app.in_files) == 1 else 'inputs'
            background_color: hex_to_color('#c8282d')

        ColoredLabel:
            id: out_label
            text: 'output'
            background_color: hex_to_color('#21a6a5')

    BoxLayout:
        id: header
        orientation: 'horizontal'
        size_hint_y: None
        height: '35dp'
        spacing: '10dp'

        TextInput:
            id: save_path

        Button:
            text: 'Save'
            size_hint_x: None
            width: '75dp'

    ScrollView:
        do_scroll_x: False

        BoxLayout:
            id: files
            orientation: 'horizontal'
            size_hint_y: None

            GridLayout:
                id: in_files
                cols: 1
                height: self.minimum_height
                on_height: files.height = max(self.height, dest_fields.height)

            Widget:
                size_hint_x: None
                width: files.width * .25

            DestManager:
                id: dest_fields
                height: self.minimum_height
                on_height: files.height = max(self.height, in_files.height)

    BoxLayout:
        size_hint_y: None
        height: '35dp'
        orientation: 'horizontal'
        spacing: '10dp'

        canvas.before:
            Color:
                rgb: .2, .2, .2
            Rectangle:
                pos: self.pos
                size: self.size

        FocusTextInput:
            id: cmd_box
            multiline: False

            recorded: ''

            on_text_validate:
                app.do_command(self.text)

        Label:
            text: 'record:'
            size_hint_x: None
            width: '65dp'

        CheckBox:
            id: record_cmds
            size_hint_x: None
            width: '35dp'